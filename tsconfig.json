{
  "compilerOptions": {
    "target": "es2020",      // Or a later ECMAScript version
    "module": "esnext",       // Or "commonjs"
    "lib": ["es2020"],        // Or the appropriate ES version
    "declaration": false,    // Don't generate declaration files for production
    "sourceMap": false,       // Don't generate source maps for production
    "outDir": "dist",        // Output directory for compiled JavaScript
    "rootDir": "src",        // Root directory for TypeScript source files
    "strict": true,          // Enable strict type checking
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],     // Include all TypeScript files in the "src" directory
  "exclude": ["node_modules"]   // Exclude the "node_modules" directory
}